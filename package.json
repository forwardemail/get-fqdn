{
  "name": "get-fqdn",
  "description": "Lookup the fully qualified domain name (\"FQDN\") of the current server's IP (default) or a custom IP.  90x faster than `hostname -f` and works with Node v6.4+.",
  "version": "0.0.4",
  "author": "Nick Baugh <niftylettuce@gmail.com> (http://niftylettuce.com/)",
  "ava": {
    "verbose": true
  },
  "bugs": {
    "url": "https://github.com/niftylettuce/get-fqdn/issues",
    "email": "niftylettuce@gmail.com"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "contributors": [
    "Nick Baugh <niftylettuce@gmail.com> (http://niftylettuce.com/)"
  ],
  "dependencies": {
    "universalify": "^0.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@commitlint/cli": "^7.6.0",
    "@commitlint/config-conventional": "^7.6.0",
    "ava": "^1.4.1",
    "codecov": "^3.3.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.16.0",
    "eslint-config-xo-lass": "^1.0.3",
    "eslint-plugin-node": "^9.0.1",
    "fixpack": "^2.3.1",
    "husky": "^2.2.0",
    "is-ci": "^2.0.0",
    "lint-staged": "^8.1.6",
    "nyc": "^14.1.0",
    "remark-cli": "^6.0.1",
    "remark-preset-github": "^0.0.13",
    "rimraf": "^2.6.3",
    "xo": "^0.24.0"
  },
  "engines": {
    "node": ">=6.4.0"
  },
  "files": [
    "lib"
  ],
  "homepage": "https://github.com/niftylettuce/get-fqdn",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "keywords": [
    "address",
    "dns",
    "domain",
    "domains",
    "fetch",
    "fqdn",
    "fully",
    "get",
    "host",
    "hostname",
    "hostnames",
    "ip",
    "ipv4",
    "ipv6",
    "lookup",
    "machine",
    "name",
    "os",
    "qualifie",
    "qualified",
    "qualify"
  ],
  "license": "MIT",
  "lint-staged": {
    "linters": {
      "*.js": [
        "xo --fix",
        "git add"
      ],
      "*.md": [
        "remark . -qfo",
        "git add"
      ],
      "package.json": [
        "fixpack",
        "git add"
      ]
    }
  },
  "main": "lib/index.js",
  "prettier": {
    "singleQuote": true,
    "bracketSpacing": true,
    "trailingComma": "none"
  },
  "remarkConfig": {
    "plugins": [
      "preset-github"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/niftylettuce/get-fqdn"
  },
  "scripts": {
    "ava": "cross-env NODE_ENV=test ava",
    "build": "npm run build:clean && npm run build:lib",
    "build:clean": "rimraf lib",
    "build:lib": "babel src --out-dir lib",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "lint": "xo && remark . -qfo && eslint lib",
    "nyc": "cross-env NODE_ENV=test nyc ava",
    "test": "npm run build && npm run lint && npm run ava",
    "test-coverage": "npm run build && npm run lint && npm run nyc"
  },
  "xo": {
    "prettier": true,
    "space": true,
    "extends": [
      "xo-lass"
    ]
  }
}
